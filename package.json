{
  "name": "giru-claude-backup-viewer",
  "version": "1.0.0",
  "description": "Giru Claude Conversation Backup & Viewer",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "start-server": "node server.js",
    "dev": "electron .",
    "build": "electron-builder --win --mac --linux",
    "build:windows": "electron-builder --win",
    "build:macos": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.giru.claude-backup-viewer",
    "productName": "Giru Claude Conversation Backup & Viewer",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron-main.js",
      "server.js",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "keywords": [
    "claude",
    "cli",
    "conversation",
    "viewer",
    "anthropic",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  }
}
